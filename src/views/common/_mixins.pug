mixin icon(iconName, iconClass)
  svg(class=`${iconClass}`)
    use(xlink:href=`/assets/images/icons/sprite.svg#${iconName}`)

mixin image(imagePath, imageAlt, imageClass)
  img(src=`/assets/images/${imagePath}`, alt=`${imageAlt}`, class=`${imageClass}`)

mixin socials(socials, modClass)
  ul.socials(class=`${modClass}`)
    each item in socials
      li.socials__item
        a(href=`${item[0]}`).socials__link
          +icon(item[1], 'socials__link-icon')

mixin triangles(firstTriangle, secondTriangle)
  .triangle__container
    .triangle
      svg(viewBox="0 0 1000 185" preserveAspectRatio="none", class=`${firstTriangle}`).triangle__texture
        polygon(points='0,0 0,185 1000,185 1000,175')
    .triangle
      svg(viewBox="0 0 1000 185" preserveAspectRatio="none", class=`${secondTriangle}`).triangle__texture
        polygon(points='0,185 1000,185 1000,0 0,175')

mixin title(title, star, titleText, titleClass)
  div(class=`${title}`)
    +image(`titles/stars${star}.png`, 'stars', 'title-img')
    h1(class=`${titleClass}`).title #{titleText}

mixin header
  header.header
    .header__links
      +socials([
              ['https://vk.com/cergo20152015', 'vk'],
              ['https://github.com/yralsmash', 'gh'],
              ['in', 'in']
            ])
    a(href="#" target="_blank").hamburger.header__menu
      .hamburger__bars

    if title== 'Блог'
      .header__content.header__content--blog
        +image('titles/stars.png', 'stars', 'title-img')
        .header__user-desc
          .user
            .user__pic-container
              .user__pic
                +image('content/user.jpg', 'user pic', 'user__pic-img')
            .user__page-desc
              h1.user__page-name.user__page-name--blog #{title}
              .user__page-site #{subtitle}
      button.arrow-scroll-btn.arrow-scroll-btn--blog
        +icon('arrow_down', 'arrow-scroll')
    else
      .header__content
        +image('titles/stars.png', 'stars', 'title-img')
        .header__user-desc
          .user
            .user__pic-container
              .user__pic
                +image('content/user.jpg', 'user pic', 'user__pic-img')
            .user__page-desc
              h1.user__page-name #{pageName}
              .user__page-site #{subtitle}
      button.arrow-scroll-btn
        +icon('arrow_down', 'arrow-scroll')

